{
    // -------------------------------------------------------------------------
    // Global configuration
    // -------------------------------------------------------------------------

    "layer": "top",
    "reload_style_on_change": 1,
    "position": "top",

    "height": 54,

    "margin-left": 15,
    "margin-top": 15,
    "margin-bottom": 0,
    "margin-right": 15,

    "spacing": 5, // Gaps between modules (4px)

    "modules-left": [
        "custom/rofi",
        "hyprland/workspaces",
        "custom/color",
        "custom/screenshot",
       // "idle_inhibitor",
        "custom/notification",
        //"tray",
        "mpd"
        //"custom/media"
    ],
    "modules-center": [
        "custom/weather",
        "clock#date",
        "custom/pacman"
    ],
    "modules-right": [
        //"tray",
        "battery",
        "temperature",
        "custom/storage",
        "cpu",
        "memory",
        "network",
        "wireplumber",
        "custom/power"
    ],

    // -------------------------------------------------------------------------
    // Modules
    // -------------------------------------------------------------------------

   "custom/rofi": {
        /*"format": "Û∞£á",*/
        "format": " ",
        "tooltip": false,
        //"on-click-right": "nwg-drawer",
        "on-click": "sleep 0.1 && bash $HOME/.config/rofi/launchers/type-3/launcher.sh",
        //"on-click-middle": "pkill -9 wofi"
    },

    "battery": {
        "interval": 2,
        "states": {
            "good": 95,
            "warning": 30,
            "critical": 15
        },
        "format": "{icon}  {capacity}%",
        "format-charging": "Ôá¶ {capacity}%",
        "format-plugged": "Ôá¶ {capacity}%",
        "format-icons": [
            "ÔâÑ",
            "ÔâÉ",
            "ÔâÇ",
            "ÔâÅ",
            "ÔâÄ"
        ]
    },

    "temperature": {
        // "thermal-zone": 1,
        "interval": 30,
        //"hwmon-path": "/sys/class/hwmon/hwmon3/temp1_input",
        "critical-threshold": 80,
        // "format-critical": "Ôãâ {temperatureC}¬∞C",
        "format-critical": "ÔÅ±  {temperatureC}¬∞C",
        "format": "{icon} {temperatureC}¬∞C",
        "format-icons": ["Ôãâ"],
        "max-length": 7,
        "min-length": 7,
        "on-click": "xsensors"
    },

    "memory": {
        "interval": 30,
       /* "format": "ÓøÖ  {used:0.2f} / {total:0.0f} GB",*/
       "format": "ÓøÖ  {used}GB",
       "on-click": "kitty -e btm"
    },

    "network": {
        "format-wifi": "Ôá´  {essid}",
        //"format-ethernet": "{ifname}: {ipaddr}/{cidr} Ôûñ",
        "format-ethernet": "ÔÄí {ifname}",
        "format-linked": "{ifname} (No IP) Ôûñ",
        "format": "ÔÄí",
        "format-disconnected": "Ôöî Disconnected",
        "format-alt": "{ifname}: {ipaddr}/{cidr}",
        //"on-click": "wl-copy $(ip address show up scope global | grep inet | head -n1 | cut -d/ -f 1 | tr -d [:space:] | cut -c5-)",
        "on-click":"sleep 0.1 && bash ~/.config/rofi/rofi-wifi-menu.sh",
        "on-click-right": "wl-copy $(ip address show up scope global | grep inet6 | head -n1 | cut -d/ -f 1 | tr -d [:space:] | cut -c6-)",
        "tooltip-format": "ÔÇì {bandwidthUpBits} ÔÄô {bandwidthDownBits}\n{ifname}\n{ipaddr}/{cidr}\n",
        "tooltip-format-wifi": "Ôá´ {essid} {frequency}MHz\nStrength: {signaldBm}dBm ({signalStrength}%)\nIP: {ipaddr}/{cidr}\nÔÇì {bandwidthUpBits} ÔÄô {bandwidthDownBits}",
        "interval": 10
    },
    
    "custom/storage": {
        "format": "Ôà≥  {}",
        "format-alt": "ÔàÄ  {percentage}%",
        "format-alt-click": "click-right",
        "return-type": "json",
        "interval": 60,
        "exec": "~/.config/waybar/modules/storage.sh"
    },

    "custom/screenshot": {
        "format": "Û∞πë",
        "on-click": "sleep 0.1 && grim",
        "tooltip-format": "Screenshot"
    },

    "custom/color": {
        "format": "Ôáª",
        "on-click": "sleep 0.1 && hyprpicker -a",
        "tooltip-format": "Color picker"
    },


    "idle_inhibitor": {
        "format": "{icon}",
        "format-icons": {
            "activated": "ÔÅÆ",
            "deactivated": "ÔÅ∞"
        },
        "tooltip": "true"
    },
    "custom/weather": {
        "format": "{}",
        "format-alt": "{alt}: {}",
        "format-alt-click": "click-right",
        "interval": 7200,
        "exec": "curl -s 'https://wttr.in/?format=1'",
        //"return-type": "json",
        //"exec": "~/.config/waybar/modules/weather.sh",
        "exec-if": "ping wttr.in -c1"
    },
    "custom/pacman": {
        "format": "<span foreground='#D79921'>Û∞ÆØ</span> {}",
        "interval": 3600,                     // every hour
        "exec": "checkupdates | wc -l",       // # of updates
        "exec-if": "exit 0",                  // always run; consider advanced run conditions
        "on-click": "kitty -e 'paru'; pkill -SIGRTMIN+8 waybar", // update system
        "signal": 8,
        "max-length": 8,
        "min-length": 3
    },

    "custom/media": {
        "format": "{icon} {}",
        "return-type": "json",
        "max-length": 50,
        "format-icons": {
            "spotify": "ÔÜº",
            "default": "üéú"
        },
        "on-click":"playerctl --player=spotify play-pause",
        "on-scroll-up":"playerctl --player=spotify next",
        "on-scroll-down":"playerctl --player=spotify previous",
        "escape": true,
        "exec-if": "pgrep spotify",
        "exec": "$HOME/.config/waybar/mediaplayer.py 2> /dev/null" // Script in resources folder
        // "exec": "$HOME/.config/waybar/mediaplayer.py --player spotify 2> /dev/null" // Filter player based on name
    },

    "custom/power": {
        "format": "ÔÄë",
        "tooltip": false,
        "on-click": "sleep 0.1 && bash $HOME/.config/rofi/powermenu/type-4/powermenu.sh"
    },

    "clock#date": {
        "format": "<span foreground='#83A598'>ÔÄó</span>  {:%H:%M  <span foreground='#83A598'>ÔÅ≥</span> %e %b}", // Icon: calendar-alt
        //"tooltip-format": "{:%I:%M %p  %A %b %d}",
        "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>",
        "today-format": "<b>{}</b>"
    },

    "custom/gammastep": {
      "interval": 5,
      "return-type": "json",
      "exec": {
        "pre": "if unit_status=\"$(systemctl --user is-active gammastep)\"; then\nstatus=\"$unit_status ($(journalctl --user -u gammastep.service -g 'Period: ' | tail -1 | cut -d ':' -f6 | xargs))\"\nelse\nstatus=\"$unit_status\"\nfi",
        "alt": "${status:-inactive}",
        "tooltip": "Gammastep is $status"
      },
      "format": "{icon}",
      "format-icons": {
        "activating": "Û∞Å™ ",
        "deactivating": "Û∞Å™ ",
        "inactive": "? ",
        "active (Night)": "ÔÜÜ ",
        "active (Nighttime)": "ÔÜÜ ",
        "active (Transition (Night)": "ÔÜÜ ",
        "active (Transition (Nighttime)": "ÔÜÜ ",
        "active (Day)": "Óåç ",
        "active (Daytime)": "Óåç ",
        "active (Transition (Day)": "Óåç ",
        "active (Transition (Daytime)": "Óåç "
      },
      "on-click": "systemctl --user is-active gammastep && systemctl --user stop gammastep || systemctl --user start gammastep"
    },

    "cpu": {
        "interval": 1,
/*        "format": "Ôíº {}%", // Icon: microchip*/
        "format": "Óâ¶  {usage}%",
        "max-length": 10,
        "min-length": 8
    },

    "mpd": {
        "max-length": 70,
        "format": "<span foreground='#D3869B'>ÔÅã</span> {artist} - {title} [{album}]",
        "format-paused": "<span foreground='#FB4934'>ÔÅå</span> {title}",
        "format-stopped": "<span foreground='#FABD2F'>ÔÄÅ</span>",
        "format-disconnected": "",
        "on-click": "mpc --quiet toggle",
        "on-click-right": "kitty mpc update; mpc ls | mpc add",
        "on-click-middle": " -e ncmpcpp",
        "on-scroll-up": "mpc --quiet prev",
        "on-scroll-down": "mpc --quiet next",
        "smooth-scrolling-threshold": 1,
        "tooltip-format": "{title} - {artist} ({elapsedTime:%M:%S}/{totalTime:%H:%M:%S})"
    },

    "custom/title": {
        "format": "{}",
        "interval": 0,
        "return-type": "json",
        //"max-length": 35,
        "tooltip": false
    },

    "hyprland/workspaces": {
        "all-outputs": true,
        "format": "{icon}",
        "format-icons": {
            "1": "ÔÑå",
            "2": "ÔÑå",
            "3": "ÔÑå",
            "4": "ÔÑå",
            "5": "ÔÑå",
            "6": "ÔÑå",
            "7": "ÔÑå",
            "8": "ÔÑå",
            "9": "ÔÑå",
            "10": "",
            "active": "ÔÑë",
            "default": "ÔÑå"
        //Circle style ÔÑë  ÔÑå
        //Pacman style Û∞ÆØ  Û±ôù

        },
        "on-scroll-up": "hyprctl dispatch workspace e+1 1>/dev/null",
        "on-scroll-down": "hyprctl dispatch workspace e-1 1>/dev/null",
        "sort-by-number": true,
        "active-only": false,
	"persistent-workspaces": {
		"*":4
	}
    },

    "hyprland/window": {
        "max-length": 100,
        "separate-outputs": true
    },

    "pulseaudio": {
        "scroll-step": 3, // %, can be a float
        "format": "{icon}  {volume}% {format_source}",
        "format-bluetooth": "{volume}% {icon}Ôäî {format_source}",
        "format-bluetooth-muted": "Ôö© {icon}Ôäî {format_source}",
        "format-muted": "Ôö© {format_source}",
        //"format-source": "{volume}% ÔÑ∞",
        //"format-source-muted": "ÔÑ±",
        "format-source": "ÔÑ∞",
        "format-source-muted": "ÔÑ±",
        "format-icons": {
            "headphone": "ÔÄ•",
            "hands-free": "Ôñê",
            "headset": "Ôñê",
            "phone": "ÔÇï",
            "portable": "ÔÇï",
            "car": "ÔÜπ",
            "default": ["ÔÄ¶", "ÔÄß", "ÔÄ®"]
        },
        "on-click": "sleep 0.1 && pavucontrol",
        "on-click-right": "amixer sset Master toggle"
    },

    "wireplumber": {
        "on-click": "sleep 0.1 && pavucontrol",
        "on-click-right": "amixer sset Master toggle 1>/dev/null",
        //on-click: "${wpctl} set-mute @DEFAULT_AUDIO_SINK@ toggle";
        //on-scroll-down: "${wpctl} set-volume -l 1.0 @DEFAULT_AUDIO_SINK@ 0.04+";
        //on-scroll-up: "${wpctl} set-volume -l 1.0 @DEFAULT_AUDIO_SINK@ 0.04-";
        "format": "{icon} {volume}%",
        "format-muted": "Ôö© ",
        "format-source": "ÔÑ∞",
        "format-source-muted": "ÔÑ±",
        //"format-muted": "<span foreground='#fab387'>Ôë¶ </span>",
        //"format-icons": [ "<span foreground='#fab387'>ÔÄ®</span>" ]
        "format-icons": {
            "headphone": "ÔÄ• ",
            "hands-free": "Ôñê ",
            "headset": "Ôñê ",
            "phone": "ÔÇï ",
            "portable": "ÔÇï ",
            "car": "ÔÜπ ",
            "default": ["ÔÄ¶ ", "ÔÄß ", "ÔÄ® "]
        },
    },

    "tray": {
        "icon-size": 15,
        "spacing": 5
    },
    "custom/notification": {
    "format":"ÔÉ≥",
    "on-click": "sleep 0.1 && swaync-client -rs && swaync-client -t",
    "tooltip-format": "Notifications"
    }
}
